<!DOCTYPE html>
<html lang="<%= language %>">
  <head>
    <% const navImages = [
      {
        link: "/",
        src: "../public/usa-flag.png",
        alt: "English",
        title: "English",
      },
      {
        link: "/es/",
        src: "../public/spain-flag.png",
        alt: "Español",
        title: "Español",
      },
      {
        link: "/pt/",
        src: "../public/brazil-flag.png",
        alt: "Português",
        title: "Português",
      }
    ]; %> 
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css"
    />
  </head>
  <body>
    <header class="container py-4 d-flex flex-row justify-content-around">
      <div>
        <h1 id="Page-title"><%= title %></h1>
      </div>
      <nav class="d-flex flex-row">
        <% for (let navImage of navImages) { %>
        <div>
          <a href=<%= navImage.link %>>
            <img
              src=<%= navImage.src %>
              alt=<%= navImage.alt %>
              title=<%= navImage.title %>
              class="lang-btn"
            />
          </a>
        </div>
        <% } %>
      </nav>
    </header>
    <main class="container text-center py-5">
      <form id="input-form">
        <div class="form-group">
          <label id="year-label" class="form-label fw-bold" for="year-input"
            ><%= yearLabel %>
          </label>
          <input
            class="form-input"
            type="number"
            min="1"
            max="<%= yearInputMax %>"
            placeholder="<%= yearInputPlaceholder %>"
            id="year-input"
            name="year"
            required
          />
          <div class="invalid-feedback"><%= invalidFeedback %></div>
        </div>
        <div class="form-group pt-3">
          <button class="btn btn-primary" id="submit-btn" type="submit">
            <%= submitBtn %>
          </button>
        </div>
      </form>
      <output id="output" class="row pt-5">
        <h5 class="col-sm-6 p-2 text-sm-end"><%= centuryHeading %></h5>
        <div class="col-sm-6 p-2 text-sm-start" id="century-output"></div>
      </output>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
      integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
      crossorigin="anonymous"
    ></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js"
      integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
