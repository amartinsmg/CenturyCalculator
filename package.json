{
  "scripts": {
    "build": "npm run build:types && npm run build:js && build:css && build:html",
    "build:types": "tsc --noEmit",
    "build:js": "babel Src --out-dir Dist --extensions \".ts,.tsx\"",
    "build:css": "cp Src/Style.css Dist/",
    "build:html": "cp Src/Index.html Src/Pt-Br/Index.html Dist/"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "typescript": "^4.6.3"
  }
}
